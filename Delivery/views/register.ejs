<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
          button[type="submit"] {
        background-color: #87e00b;
        color: black;
        }  

        button:hover{
            background-color: #95ff00;
        }
        input{
            border: 2px solid #87e00b;
        }
        .fa-solid{
            padding-left: 1vw;
            padding-right: 1vw;
        }

        img{
            width: 17vw;
            height: auto;
            margin-right: 10vw;
        }
        #Login{
            display: grid;
            place-items: center;
            font-size: small;
        }

        /* #container{
            display: flex;
            flex-direction: row;
            justify-content:center;
        } */
        /* .custom-green-btn {
        background-color: rgba(155, 253, 18, 1);
        color: black;
    } */
    </style>
</head>
<body>
    <div id="container" class="min-h-screen flex items-center justify-center ">
        <img src="../images/file.png" alt="">
        <div class="bg-white p-8 rounded  w-full md:w-1/2 lg:w-1/3 xl:w-1/4">
            <h1 class="text-2xl font-semibold mb-4"><i class="fa-solid fa-address-card"></i>Create New Account</h1>
            <form action="/register" method="post">
                <div class="mb-4">
                    <input type="text" name="fullname" placeholder="Full name" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="text" name="username" placeholder="Username" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="password" name="password" placeholder="Password" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="email" name="email" placeholder="Email" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="date" name="dob" placeholder="Date of Birth" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="number" name="age" placeholder="Age" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="text" name="city" placeholder="City" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <input type="tel" name="contact" placeholder="Contact" class="w-full p-2 border rounded-xl focus:outline-none focus:border-blue-500">
                </div>
                <button type="submit" class="w-full bg-primary bg-primary-50 text-white p-2 rounded-full hover:bg-opacity-80 focus:outline-none focus:shadow-outline-blue">Register</button>

            </form>
            <div id="Login" class="mt-4">
                <a href="/login" class="text-blue-500 hover:underline">Login to an existing account</a>
            </div>
        </div>
      </div>
      
</body>
</html>