<% include ./header.ejs %>

    <div id="feedbg" class="w-full min-h-screen px-10 py-8">
        <div class="cards flex flex-wrap gap-10">

            <% posts.forEach(function(elem){ %>
                <% if (elem.user.username !==user.username) { %>
                    <div class="card w-32">
                        <div class="w-full h-40 bg-red-600 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                        </div>
                        <div style="color: black; text-align: center;" class="display">
                            <h5 class="mt-2 text-sm">
                                <%= elem.title %>
                            </h5>
                            <h4 class="mt-2 text-sm">
                                <%= elem.user.username %>
                            </h4>
                            <a style="color: rgb(0, 0, 0);" href="/details/<%= elem._id %>">See details</a>
                        </div>
                    </div>
                    <% } %>
                        <% }); %>

        </div>
    </div>
    <% include ./footer.ejs %>